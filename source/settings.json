{
  "name": "Lunch Break",
  "version": "1.9.0",
  "images": [
    {
      "variable": "header_logo",
      "label": "Header image",
      "description": "Good for an image up to 140 pixels high"
    }
  ],
  "image_sets": [
    {
      "variable": "slideshow_images",
      "label": "Homepage slideshow",
      "description": "1000px by 400px images recommended"
    }
  ],
  "fonts": [
    {
      "variable": "primary_font",
      "label": "Header Font",
      "default": "Open Sans"
    },
    {
      "variable": "secondary_font",
      "label": "Secondary Font",
      "default": "Open Sans"
    }
  ],
  "colors": [
    {
      "variable": "background_color",
      "label": "Background",
      "default": "#FFFFFF"
    },
    {
      "variable": "secondary_background",
      "label": "Header Background",
      "default": "#FAFAFA"
    },
    {
      "variable": "header_color",
      "label": "Header Text",
      "default": "#135884"
    },
    {
      "variable": "text_color",
      "label": "Primary Text",
      "default": "#111111"
    },
    {
      "variable": "secondary_text_color",
      "label": "Secondary Text",
      "default": "#444444"
    },
    {
      "variable": "button_text_color",
      "label": "Button text",
      "default": "#FFFFFF"
    },
    {
      "variable": "button_background_color",
      "label": "Button background",
      "default": "#235575"
    },
    {
      "variable": "button_background_hover_color",
      "label": "Button background hover",
      "default": "#193648"
    },
    {
      "variable": "border_color",
      "label": "Borders",
      "default": "#d4d4d4"
    },
    {
      "variable": "announcement_text_color",
      "label": "Announcement Message Text",
      "default": "#FFFFFF"
    },
    {
      "variable": "announcement_background_color",
      "label": "Announcement Message Background",
      "default": "#235575"
    }
  ],
  "options": [
    {
      "variable": "announcement_message_text",
      "label": "Announcement text",
      "type": "text",
      "description": "Displays an announcement message on the top of every page"
    },
    {
      "variable": "maintenance_message",
      "label": "Maintenance mode message",
      "type": "text",
      "description": "A message visitors see when your shop is in Maintenance Mode",
      "default": "We're working on our shop right now.<br /><br />Please check back soon."
    },
    {
      "variable": "sidebar_position",
      "label": "Sidebar position",
      "type": "select",
      "options": [
        ["Left", "left"],
        ["Right", "right"]
      ],
      "default": "right",
      "description": "Sets the position of the side navigation on the page"
    },
    {
      "variable": "header_position",
      "label": "Header alignment",
      "type": "select",
      "options": [
        ["Left", "flex-start"],
        ["Center", "center"],
        ["Right", "flex-end"]
      ],
      "default": "center",
      "description": "Sets the position of your store name or header logo"
    },
    {
      "variable": "featured_products",
      "label": "Featured products",
      "type": "select",
      "options": "0..100",
      "default": 12,
      "description": "The number of products displayed on the home page"
    },
    {
      "variable": "featured_order",
      "label": "Featured products order",
      "type": "select",
      "options": "product_orders",
      "default": "position",
      "description": "The order of products on the Home page"
    },
    {
      "variable": "max_products_per_row",
      "label": "Maximum products per row",
      "type": "select",
      "options": "1..4",
      "default": 3,
      "description": "The maximum number of products displayed per row on larger screens"
    },
    {
      "variable": "max_products_per_row_mobile",
      "label": "Maximum products per row (mobile)",
      "type": "select",
      "options": "1..2",
      "default": 2,
      "description": "The number of products displayed per row on smaller screens"
    },
    {
      "variable": "grid_image_style",
      "label": "Product grid image style",
      "type": "select",
      "options": [
        ["Normal", "default"],
        ["Fit to square", "contain"],
        ["Crop to square", "cover"]
      ],
      "default": "cover",
      "description": "Sets the display of images in the product grid"
    },
    {
      "variable": "product_detail_alignment",
      "label": "Product grid details alignment",
      "type": "select",
      "options": [
        ["Left", "left"],
        ["Center", "center"]
      ],
      "default": "center",
      "description": "Alignment for product details under thumbnail images"
    },
    {
      "variable": "product_image_zoom",
      "label": "Enable product image zoom",
      "type": "boolean",
      "default": true,
      "description": "Click to open a larger version of the Product page image"
    },
    {
      "variable": "desktop_product_page_images",
      "label": "Desktop product page images",
      "type": "select",
      "options": [
        ["Thumbnails", "thumbnails"],
        ["Carousel", "carousel"],
        ["Stacked 2 column", "two-column"],
        ["Stacked full width", "stacked"]
      ],
      "default": "carousel",
      "description": "Sets the display of the Product page gallery"
    },
    {
      "variable": "mobile_product_page_images",
      "label": "Mobile product page image carousel",
      "type": "select",
      "options": [
        ["Show thumbnails", "show-thumbnails"],
        ["Hide thumbnails", "hide-thumbnails"]
      ],
      "default": "show-thumbnails",
      "description": "Choose to hide or show thumbnails on the mobile Product page carousel"
    },
    {
      "variable": "products_per_page",
      "label": "Products per page",
      "type": "select",
      "options": "1..100",
      "default": 36,
      "description": "The number of products displayed per page"
    },
    {
      "variable": "money_format",
      "label": "Price display",
      "type": "select",
      "options": [
        ["Currency sign", "sign"],
        ["Currency code with sign", "sign_and_code"]
      ],
      "default": "sign",
      "description": "Sets the display of prices in your shop"
    },
    {
      "variable": "show_search",
      "label": "Show search",
      "type": "boolean",
      "default": true,
      "description": "Displays a search field in the sidebar"
    },
    {
      "variable": "show_newest",
      "label": "Show newest products",
      "type": "boolean",
      "default": false,
      "description": "Displays a list of your newest products in the sidebar"
    },
    {
      "variable": "show_top_selling",
      "label": "Show top selling products",
      "type": "boolean",
      "default": false,
      "description": "Displays a list of your top selling products in the sidebar"
    },
    {
      "variable": "show_sold_out_product_options",
      "label": "Show sold out product options",
      "type": "boolean",
      "default": true,
      "description": "Shows sold out product options in the Product page dropdowns",
      "requires": "inventory"
    },
    {
      "variable": "show_share_buttons",
      "label": "Show Product share buttons",
      "type": "boolean",
      "default": false,
      "description": "Adds Facebook, Twitter, and Pinterest buttons to Product pages"
    },
    {
      "variable": "twitter_url",
      "label": "Twitter URL",
      "type": "text",
      "description": "Ex: http://twitter.com/bigcartel"
    },
    {
      "variable": "facebook_url",
      "label": "Facebook URL",
      "type": "text",
      "description": "Ex: http://facebook.com/bigcartel"
    },
    {
      "variable": "tumblr_url",
      "label": "Tumblr URL",
      "type": "text",
      "description": "Ex: http://bigcartel.tumblr.com"
    },
    {
      "variable": "instagram_url",
      "label": "Instagram URL",
      "type": "text",
      "description": "Ex: http://instagram.com/bigcartel"
    },
    {
      "variable": "pinterest_url",
      "label": "Pinterest URL",
      "type": "text",
      "description": "Ex: http://pinterest.com/bigcartel"
    }
  ],
 "checkout": {
    "optimize_legibility": "optimizeLegibility",
    "header_image_max_height": "140px",
    "antialias_text": "antialiased",
    "header_image": "{{ header_logo }}",
    "background_color": "{{ background_color }}",
    "gutter_width": "28px",
    "body_font": "{{ secondary_font }}",
    "body_font_size": "16px",
    "step_header_font": "{{ primary_font }}",
    "step_header_font_size": "20px",
    "step_header_font_weight": "bold",
    "title_font": "{{ primary_font }}",
    "title_vertical_padding": "16px",
    "title_background_color": "transparent",
    "title_position": "center",
    "title_font_size": "42px",
    "title_color": "{{ header_color }}",
    "secondary_font": "{{ secondary_font }}",
    "secondary_font_size": "16px",
    "content_border_radius": "0",
    "content_header_vertical_padding": "28px",
    "content_background_color": "{{ background_color }}",
    "content_banded": "true",
    "content_header_height": "80px",
    "content_horizontal_padding": "0",
    "content_header_background_color": "{{ background_color }}",
    "content_border_color": "transparent",
    "content_border_width": "0",
    "content_primary_font_size": "24px",
    "content_header_color": "{{ text_color }}",
    "content_color": "{{ text_color }}",
    "link_font_size": "16px",
    "link_color": "{{ secondary_text_color }}",
    "link_hover_color": "{{ text_color }}",
    "error_border_width": "0",
    "error_font_size": "16px",
    "error_background_color": "#950f1e",
    "error_color": "#ffffff",
    "error_border_radius": "0",
    "error_border_color": "#950f1e",
    "custom_inputs": true,
    "input_focus_color": "#000000",
    "input_focus_background_color": "#ffffff",
    "input_border_radius": "2px",
    "input_focus_border_color": "#000000",
    "input_error_border_color": "#950f1e",
    "input_color": "#222222",
    "input_error_color": "#000000",
    "input_border_color": "#222222",
    "input_font_size": "16px",
    "input_font": "{{ secondary_font }}",
    "input_horizontal_padding": "8px",
    "input_border_width": "1px",
    "input_height": "40px",
    "input_background_color": "#ffffff",
    "input_error_background_color": "#ffffff",
    "label_text_transform": "normal",
    "label_color": "#999999",
    "label_font_weight": "normal",
    "label_font_size": "16px",
    "in_field_labels": false,
    "button_border_color": "{{ button_background_color }}",
    "button_border_radius": "2px",
    "button_hover_border_color": "{{ button_background_hover_color }}",
    "button_height": "54px",
    "button_border_width": "0px",
    "button_font": "{{ secondary_font }}",
    "button_font_size": "16px",
    "button_font_weight": "bold",
    "button_background_color": "{{ button_background_color }}",
    "button_color": "{{ button_text_color }}",
    "button_hover_color": "{{ button_text_color }}",
    "button_position": "center",
    "button_hover_background_color": "{{ button_background_hover_color }}",
    "step_inactive_header_color": "opacify({{ text_color }}, .5)",
    "step_border_color": "{{ border_color }}",
    "step_border_width": "4px",
    "step_background_color": "{{ background_color }}",
    "step_inactive_border_color": "opacify({{ border_color }}, .5)",
    "step_primary_font_weight": "normal",
    "step_header_color": "{{ text_color }}",
    "step_header_position": "center",
    "step_inactive_background_color": "{{ background_color }}",
    "step_vertical_padding": "30px",
    "step_primary_font_size": "24px",
    "step_border_style": "solid",
    "step_primary_font": "{{ primary_font }}",
    "summary_inactive_item_border_color": "opacify({{ border_color }}, .5)",
    "summary_font_size": "16px",
    "summary_submit_background_color": "{{ background_color }}",
    "summary_inactive_color": "opacify({{ text_color }}, .5)",
    "summary_submit_border_color": "opacify({{ border_color }}, .5)",
    "summary_item_border_width": "1px",
    "summary_item_border_color": "{{ border_color }}",
    "summary_secondary_color": "{{ text_color }}",
    "summary_submit_border_width": "2px",
    "summary_item_list_border_color": "{{ border_color }}",
    "summary_inactive_secondary_color": "opacify({{ text_color }}, .5)",
    "summary_item_list_border_width": "2px",
    "summary_color": "{{ text_color }}",
    "summary_inactive_item_list_border_color": "opacify({{ border_color }}, .5)"
  }
}
